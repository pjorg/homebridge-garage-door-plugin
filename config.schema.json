{
  "pluginAlias": "garage-door-opener",
  "pluginType": "accessory",
  "headerDisplay": "Controls a garage door with a RPi",
  "footerDisplay": "For help please see the [README](https://github.com/pjorg/homebridge-garage-door-plugin/blob/master/README.md).",
  "schema": {
    "type": "object",
    "properties": {
        "open_pin": {
            "title": "Open Sensor Pin",
            "type": "integer",
            "default": 15,
            "required": true
        },
        "close_pin": {
            "title": "Close Sensor Pin",
            "type": "integer",
            "default": 12,
            "required": true
        },
        "relay_pin": {
            "title": "Relay Sensor Pin",
            "type": "integer",
            "default": 12,
            "required": true
        },
        "motor_motion_open_pin": {
            "title": "Motor Motion to Open Sensor Pin",
            "type": "integer",
            "default": 29,
            "required": true
        },
        "motor_motion_close_pin": {
            "title": "Motor Motion to Close Sensor Pin",
            "type": "integer",
            "default": 16,
            "required": true
        },
        "openclose_timeout": {
            "title": "Open/Close Timeout",
            "type": "integer",
            "minimum": 100,
            "maximum": 3000,
            "default": 400,
            "required": true
            },
        "heartbeat_interval": {
            "title": "Heartbeat interval",
            "type": "integer",
            "minimum": 100,
            "maximum": 3000,
            "default": 500,
            "required": true
            }
        }
    }
}
